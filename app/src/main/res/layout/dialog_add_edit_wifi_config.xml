<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_ssid_hint"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ssidSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp" />

    <ProgressBar
        android:id="@+id/ssidProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ssidErrorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_ssids_found"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/on_connect_action"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/onConnectActionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/onConnectActionOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_off" />

        <RadioButton
            android:id="@+id/onConnectActionAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_auto" />

        <RadioButton
            android:id="@+id/onConnectActionPrivateDnsServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_private_dns_server" />

    </RadioGroup>

    <Spinner
        android:id="@+id/onConnectDnsServerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/on_disconnect_action"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/onDisconnectActionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/onDisconnectActionOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_off" />

        <RadioButton
            android:id="@+id/onDisconnectActionAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_auto" />

        <RadioButton
            android:id="@+id/onDisconnectActionPrivateDnsServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_private_dns_server" />

    </RadioGroup>

    <Spinner
        android:id="@+id/onDisconnectDnsServerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>